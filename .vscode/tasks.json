{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            // forces old app files to be cleared out first before remaking when reran
            "dependsOn": ["Clean build"],
            "args": [
                "-O2",
                "-std=c++23",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                // warn all
                "-Wall",
                "-g",
                // includes found in include folder
                "-I${workspaceFolder}/include",
                // libraries found in library folder
                "-L${workspaceFolder}/library",
                // at run time, compile all cpp files in source folder
                "${workspaceFolder}/source/*.cpp",
                // also compile glad.c and libglfw libraries in library folder
                "${workspaceFolder}/library/glad.c",
                "${workspaceFolder}/library/libglfw.3.dylib",
                "-o",
                // name of program
                "${workspaceFolder}/app",
                // macOS frameworks
                "-framework",
                "OpenGL",
                "-framework",
                "Cocoa",
                "-framework",
                "IOKit",
                "-framework",
                "CoreVideo",
                "-framework",
                "CoreFoundation",
                // do not warn for deprecated
                "-Wno-deprecated",
                // link address of libglfw at runtime (because it's dynamic)
                "-Wl,-rpath,@executable_path/library"
            ],  
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        // second task that clears off old app files before building new one
        {
            "label": "Clean build",
            "type": "shell",
            "command": "rm",
            "args": [
                "-f",
                "app"
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}